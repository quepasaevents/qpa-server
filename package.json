{
  "name": "functions",
  "scripts": {
    "codegen": "gql2ts ./src/schema.graphql -o ./@types/graphql.d.ts",
    "migration-gen": "ts-node ./node_modules/.bin/typeorm migration:generate --config src/ormconfig.ts --name default",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc --version && tsc; (cd lib; find .); mkdir dist; cp ./src/schema.graphql ./dist; cp -r lib/src/ dist/; cp -r lib/migrations dist/",
    "release": "docker build -t eu.gcr.io/qpa-staging-237606/api:$TAG .; docker push eu.gcr.io/qpa-staging-237606/api:$TAG",
    "deploy": "kubectl apply -f k8s/cluster.yaml",
    "start": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "test": "jest --runInBand",
    "prod-server": "DB_USER=qpa DB_PASSWORD=qpa POSTGRES_DB=qpa forever start -v -c ts-node ./src/index.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/graphql": "^14.2.3",
    "apollo-server": "^2.8.1",
    "apollo-server-testing": "^2.8.1",
    "atob": "^2.1.2",
    "cookie": "^0.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.5",
    "luxon": "^1.17.2",
    "mailgun-js": "^0.22.0",
    "morgan": "^1.9.1",
    "node-pre-gyp": "^0.13.0",
    "pg": "^7.12.0",
    "ramda": "^0.26.1",
    "random-string": "^0.2.0",
    "rrule": "^2.6.2",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/luxon": "^1.15.2",
    "@types/node": "^10.12.30",
    "@types/uuid": "^3.4.5",
    "gql2ts": "^1.10.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "globalSetup": "./jest-setup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true,
  "version": "1.0.0"
}
